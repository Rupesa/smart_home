            </Button.Resources>
            <StackPanel Height="72" Width="147">
                <Label Name="label71" Height="40" FontWeight="ExtraBold" Margin="54,0,3,0" FontFamily="Arial" BorderBrush="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
